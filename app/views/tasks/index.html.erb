<h1>All tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <input type="checkbox"
             id="task_<%= task.id %>"
             name="task_<%= task.id %>"
             <%= "checked" if task.completed %> />

      <label for="task_<%= task.id %>">
        <%= link_to task.title, task_path(task.id) %>
      </label>
      <%= link_to "Delete", task_path(task),
        data: { turbo_method: "delete", turbo_confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>

<div><%= link_to "Add a new task", new_task_path %></div>
