<h1><%= @task.title %></h1>
<div>
  <p><%= @task.details %></p>
</div>

<input type="checkbox"
id="task_<%= @task.id %>"
name="task_<%= @task.id %>"
<%= "checked" if @task.completed %> />

<label for="task_<%= @task.id %>">
<%= ( @task.completed ? "This task is completed" : "This task is not completed yet" ) %>
</label>
<%= link_to "Back", tasks_path, class: "btn" %>
<%= link_to "Edit Task", edit_task_path(@task) %>
